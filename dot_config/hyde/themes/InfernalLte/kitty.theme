$HOME/.config/kitty/theme.conf|killall -SIGUSR1 kitty

## name:     Catppuccin Latte üêë
## author:   Pocco81 (https://github.com/Pocco81)
## license:  MIT
## upstream: https://github.com/catppuccin/kitty/blob/main/latte.conf
## blurb:    Soothing pastel theme for the high-spirited!

font-family ZedMono Nerd Font

# The basic colors
foreground              #4C4F69
background              #EFF1F5
selection_foreground    #EFF1F5
selection_background    #8e7548

# Cursor colors
cursor                  #8e7548
cursor_text_color       #EFF1F5

# URL underline color when hovering with mouse
url_color               #7287FD

# Kitty window border colors
active_border_color     #8839EF
inactive_border_color   #7C7F93
bell_border_color       #E64553

# OS Window titlebar colors
wayland_titlebar_color system
macos_titlebar_color system


# Colors for marks (marked text in the terminal)
mark1_foreground #EFF1F5
mark1_background #1E66F5
mark2_foreground #EFF1F5
mark2_background #8839EF
mark3_foreground #EFF1F5
mark3_background #209FB5

# The 16 terminal colors

# black
color0 #4C4F69
color8 #6C6F85

# red
color1 #D20F39
color9 #D20F39

# green
color2  #40A02B
color10 #40A02B

# yellow
color3  #DF8E1D
color11 #DF8E1D

# blue
color4  #1E66F5
color12 #1E66F5

# magenta
color5  #EA76CB
color13 #EA76CB

# cyan
color6  #179299
color14 #179299

# white
color7  #ACB0BE
color15 #ACB0BE
scrollback_lines 10000
scrollback_pager less --chop-long-lines --RAW-CONTROL-CHARS +INPUT_LINE_NUMBER
scrollback_pager_history_size 10
tab_bar_edge            top
tab_bar_margin_width    0
tab_bar_margin_height   5 0
tab_bar_style           fade
tab_fade                0
tab_title_template          "{fmt.bg.default}{fmt.fg._303030}ÓÇ∂{fmt.fg.default}{fmt.bg._303030}{fmt.fg._c6c6c6} {tab.active_exe} {fmt.fg.default}{fmt.bg.default}{fmt.fg._303030}ÓÇ¥{fmt.fg.default}"
active_tab_title_template   "{fmt.bg.default}{fmt.fg._df8e1d}ÓÇ∂{fmt.fg.default}{fmt.bg._df8e1d}{fmt.fg._080808} {tab.active_wd} {fmt.fg.default}{fmt.bg.default}{fmt.fg._df8e1d}ÓÇ¥{fmt.fg.default}"
